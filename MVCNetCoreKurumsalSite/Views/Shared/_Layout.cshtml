<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCNetCoreKurumsalSiteProje</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link href="~/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCNetCoreKurumsalSiteProje.styles.css" asp-append-version="true" />
    <link type="image/x-icon" rel="icon" href="/images/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
    @await RenderSectionAsync("style", required: false)
</head>
<body>
    @await Html.PartialAsync("_PartialHeader")
    <div class="container">
        <main role="main" class="pb-3">
            @Html.Raw(TempData["Mesaj"])
            @RenderBody()
        </main>
    </div>
    @await Html.PartialAsync("_PartialFooter")
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
